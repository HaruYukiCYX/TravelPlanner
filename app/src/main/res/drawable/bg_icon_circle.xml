<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- 圆形的背景颜色，这里用一种极浅的紫色，呼应搜索卡片的主色调 -->
    <solid android:color="#F3E5F5" />

    <!-- 圆形的边框 -->
    <stroke
        android:width="1dp"
        android:color="#E1BEE7" />

    <!-- 控制圆形的大小比例 -->
    <size
        android:width="40dp"
        android:height="40dp" />
</shape>